<Window x:Class="PSReport.ScriptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PSReport"
        mc:Ignorable="d"
        Height="160" Width="460" ResizeMode="NoResize" >
    <Grid>
        
        
        <Label Content="Title" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="52"/>
        <TextBox Name="Script_Title" HorizontalAlignment="Left" Height="23" TextWrapping="NoWrap" VerticalAlignment="Top" Width="364" Margin="70,10,0,0"/>

        <Label Content="Path" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,38,0,0" Width="52"/>
        <TextBox Name="Script_Path" TextWrapping="NoWrap" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="284" Margin="70,38,0,0"/>

        <Label Content="Enabled" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,64,0,0" Width="52"/>
        <CheckBox Name="Script_Enabled"  HorizontalAlignment="Left" Margin="70,71,0,0" VerticalAlignment="Top" Width="18"/>
        
        <Button Content="Ok" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="279,91,0,0" Click="OK_Btn_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="359,91,0,0" Click="Cancel_Btn_Click"/>
        <Button Content="Browse" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="23" Margin="359,38,0,0" Click="Browse_Btn_Click"/>
        

    </Grid>
</Window>
