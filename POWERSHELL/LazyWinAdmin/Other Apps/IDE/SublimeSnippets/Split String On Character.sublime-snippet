<snippet>
    <content><![CDATA[
\$pos = \$PSCommandPath.LastIndexOf("\\")
\$ScriptDir = \$PSCommandPath.Substring(0, \$pos)
\$ScriptFile = \$PSCommandPath.Substring(\$pos+1)
$0]]></content>
    <tabTrigger>split</tabTrigger>
    <scope>source.powershell</scope>
</snippet>